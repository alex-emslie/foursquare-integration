.main
  %h1= @user.name || "Hi"
  %h2= @user.email
  %h3 My Groups
  %ul
    - @user.groups.each do |group|
      %li
        = link_to group.name, group_path(group)
        - if current_user == @user
          = link_to "(leave)", leave_group_path(group)
  - if current_user == @user
    %p= link_to "Edit", edit_user_path(current_user)
