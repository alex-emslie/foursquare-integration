.row
  .col-md-8
    %h1= "hello #{user_signed_in? ? current_user.email : 'world'}"

    = form_tag({ controller: "locations", action: "search"}, method: "get") do
      = text_field_tag(:query, "", :class => "form-control", :style => "width: 33%; display: inline; height: 43px;")
      = submit_tag("Search", :class => "btn-primary", :style => "display: inline;")

    %button.btn-primary.create-event create new event

  .col-md-4
    - if user_signed_in?
      %h4 My Groups
      %ul
        - current_user.groups.each do |group|
          %li= link_to group.name, group_path(group)
